<header class="second-header">
  <%= link_to image_tag('step-out.logo.png' , size: '185x50'), "#" %>
</header>

<div class="courses-sell-contents">
  <div class="courses-sell-main">

    <h2 class='courses-sell-title'>ユーザー情報入力</h2>
    <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
  
      <div class="field">
        <div class="side-text">
          メールアドレス
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"items-text", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="field">
        <div class="side-text">
          パスワード
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"items-text", id:"password", placeholder:"6文字以上の半角英数字" %>
        <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>
      
      <div class="sell-btn-contents">
        <%= f.submit "ログイン" ,class:"sell-btn" %>
      </div>
      <p class='back-root'><%= link_to '新規登録', new_user_registration_path %></p>
    </div>
    <% end %>

  </div>
</div>

<%= render "shared/footer"%>