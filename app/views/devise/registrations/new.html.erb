<header class="second-header">
  <%= link_to image_tag('step-out.logo.png' , size: '185x50'), "#" %>
</header>

<div class="courses-sell-contents">
  <div class="courses-sell-main">

    <h2 class='courses-sell-title'>新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>

      <div class="field">
        <div class="side-text">
          ニックネーム
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :nickname, class:"items-text", id:"nickname", placeholder:"例) ステップ太郎", maxlength:"40" %>
      </div>
      <div class="field">
        <div class="side-text">
          メールアドレス
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"items-text", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="field">
        <div class="side-text">
          パスワード
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"items-text", id:"password", placeholder:"6文字以上の半角英数字" %>
        <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>
      <div class="field">
        <div class="side-text">
          パスワード(確認)
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"items-text", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
      <div class="field">
        <div class="side-text">
          プロフィール
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :profile, class:"items-text", id:"profile", placeholder:"例) 〇〇です。よろしくお願いします！",rows:"7" ,maxlength:"1000" %>
      </div>
      
      <div class="sell-btn-contents">
        <%= f.submit "新規登録" ,class:"sell-btn" %>
      </div>
      <p class='back-root'><%= link_to 'ログイン', new_user_session_path %></p>
    </div>
    <% end %>

  </div>
</div>

<%= render "shared/footer"%>